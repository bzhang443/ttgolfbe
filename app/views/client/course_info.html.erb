<% c = @data['course'] %>
<%= c['name'] %> <br/>
<% c['pics'].each do |p| %>
<%= image_tag p %> 
<% end %>
<br/>
<b>
类型: <%= c['type']||'山地' %>  设计师:  <%= c['designer']||'David M.Dale' %> <br/>
</b>
<%= c['description'][0..100] %> 
<% if c['description'].length > 100 %>
<%= link_to '..more', '#', :onclick=>'return show_desc();'%>
<% end %>
<br/>
综合: <%= link_to "#{c['comments']['overall']}(#{c['comments']['votes']}人评分)", '#', :onclick=>'return show_comments();' %><br/>
风景: <%= c['comments']['view'] %>  &nbsp;&nbsp; 难度: <%= c['comments']['hardness'] %><br/>
维护: <%= c['comments']['maintenance'] %>  &nbsp;&nbsp; 价格: <%= c['comments']['price'] %><br/>
<% unless c['lat_lon'].blank? || c['lat_lon']=='|' %>
<%=link_to '地图', client_course_map_path(:name=>c['name'], :lat_lon=>c['lat_lon'])%>&nbsp;&nbsp;
<% end %>
<%=link_to '关注', ''%>&nbsp;&nbsp;
<%=link_to '评分', client_course_comments_path(:id=>c['id']) %>&nbsp;&nbsp;
<%=link_to '球道图', client_fairway_list_path(:id=>c['id']) %><br/>
<table>
  <tr>
    <th>平日价格</th><th>假日价格</th><th>致电订场</th>
  </tr>
  <% c['prices'].each do |p| %>
  <tr>
    <td><%=p['price_workdays']%></td>
    <td><%=p['price_holidays']%></td>
    <td><%=p['telephone']%></td>
  </tr>
  <% end %>
</table>


<script type="text/javascript" >
  function show_desc() {
    alert("全部介绍文字");
  }
  
  function show_comments() {
    alert("评分详情");
  }
</script>