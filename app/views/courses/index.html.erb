<h1>Listing courses</h1>

<table>
  <tr>
    <th>Club</th>
    <th>Name</th>
    <th>Designer</th>
    <th>Description</th>
    <th>Yards</th>
    <th>Holes</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.club_id %></td>
    <td><%= course.name %></td>
    <td><%= course.designer %></td>
    <td><%= course.description %></td>
    <td><%= course.yards %></td>
    <td><%= course.holes %></td>
    <td><%= course.group_id %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

